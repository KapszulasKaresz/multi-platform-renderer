{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "BuildType",
            "description": "Select the build type",
            "default": "Debug",
            "type": "pickString",
            "options": [
                "Debug",
                "Release"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "type": "cppvsdbg",
            "program": "${workspaceFolder}/_build/build/${input:BuildType}/app/standalone/MultiPlatformRenderer.exe",
        }
    ]
}